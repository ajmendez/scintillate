#!/usr/bin/python
import sys
import scintillate
from urllib2 import HTTPError
from datetime import datetime, timedelta
from scintillate.api import STATS_FILENAME



def previousdates(n=100):
    today = datetime.now().replace(hour=0, minute=0, second=0, microsecond=0)
    for i in xrange(1,n+1):
        yield today - timedelta(days=i)


def main():
    api = scintillate.Flickr()
    
    with scintillate.Data(STATS_FILENAME) as data:
        try:
            dates = [x['date'] for x in data]
            for date in previousdates():
                d = date.strftime('%Y-%m-%d')
                if d in dates:
                    continue
                
                data.append(api.getstats(date))
                dates.append(d)
                print ' added {}'.format(d)
                
        except KeyboardInterrupt as e:
            print 'Bye!'
        # except Exception as e:
        #     print 'Failed'
        #     raise


if __name__ == '__main__':
    # from pysurvey import util
    # util.setup_stop()
    main()